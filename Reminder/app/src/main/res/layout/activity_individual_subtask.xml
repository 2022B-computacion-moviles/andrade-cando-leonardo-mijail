        android:layout_width="128dp"
        android:layout_height="32dp"
        android:alpha="0.9"
        android:background="@drawable/background_button_login"
        android:drawableLeft="@drawable/icon_add"
        android:text="Add subtask"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundButton_add_subtask"
        app:layout_constraintEnd_toEndOf="@+id/backgroundButton_add_subtask"
        app:layout_constraintStart_toStartOf="@+id/backgroundButton_add_subtask"
        app:layout_constraintTop_toTopOf="@+id/backgroundButton_add_subtask"
        app:layout_constraintVertical_bias="1.0">

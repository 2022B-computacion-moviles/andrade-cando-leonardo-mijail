<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.IndividualSubtaskActivity">

    <ImageView
        android:id="@+id/imageReminder"
        android:layout_width="164dp"
        android:layout_height="103dp"
        android:src="@drawable/logo_reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <View
        android:id="@+id/viewBackground_top"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:background="@drawable/background_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageReminder"></View>

    <Button
        android:id="@+id/id_button_pending"
        style="@android:style/Widget.Button"
        android:layout_width="137dp"
        android:layout_height="28dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_banner_actual"
        android:text="PENDING"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_top"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_top"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top"></Button>

    <Button
        android:id="@+id/id_button_completed"
        style="@android:style/Widget.Button"
        android:layout_width="137dp"
        android:layout_height="28dp"
        android:background="@drawable/background_banner_no_actual"
        android:text="COMPLETED"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_top"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_top"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top"></Button>

    <Button
        android:id="@+id/id_button_overdue"
        style="@android:style/Widget.Button"
        android:layout_width="136dp"
        android:layout_height="28dp"
        android:background="@drawable/background_banner_no_actual"
        android:text="OVERDUE"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_top"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_top"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top"></Button>

    <View
        android:id="@+id/view3"
        android:layout_width="341dp"
        android:layout_height="292dp"
        android:background="@drawable/background_space_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_sb_task" />

    <Button
        android:id="@+id/id_button_save_sub_task"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:alpha="0.9"
        android:background="@drawable/background_button_login"
        android:drawableLeft="@drawable/icon_add"
        android:text="Save Subtask"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundButton_add_sub_task"
        app:layout_constraintEnd_toEndOf="@+id/backgroundButton_add_sub_task"
        app:layout_constraintStart_toStartOf="@+id/backgroundButton_add_sub_task"
        app:layout_constraintTop_toTopOf="@+id/backgroundButton_add_sub_task"
        app:layout_constraintVertical_bias="1.0"></Button>

    <TextView
        android:id="@+id/p4_sub_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="P4"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.592" />

    <EditText
        android:id="@+id/name_sub_task"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_space_white"
        android:hint="Subtask name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/p3_sub_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="P3"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.592" />

    <TextView
        android:id="@+id/p1_sub_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P1"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.592" />

    <TextView
        android:id="@+id/p2_sub_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-2dp"
        android:text="P2"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.592" />

    <CheckBox
        android:id="@+id/checkBox_sub_task"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:buttonTint="@color/black"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/tv_description_sub_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.159" />

    <EditText
        android:id="@+id/description_sub_task"
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:background="@drawable/background_space_white"
        android:hint="Add a description of the subtaks."
        android:textColor="#555050"
        android:textColorHint="#555050"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.252" />

    <RadioGroup
        android:id="@+id/radioGroup_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="-10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.482">

        <RadioButton
            android:id="@+id/radio_Button_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#EC2129"
            android:onClick="setPrioritySubTask" />

        <RadioButton
            android:id="@+id/radio_Button_p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#0CA678"
            android:onClick="setPrioritySubTask" />

        <RadioButton
            android:id="@+id/radio_Button_p3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#2410DD"
            android:onClick="setPrioritySubTask" />

        <RadioButton
            android:id="@+id/radio_Button_p4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFD43B"
            android:onClick="setPrioritySubTask" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_priority_sub_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.384" />

    <View
        android:id="@+id/backgroundButton_add_sub_task"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:background="@drawable/background_button_login"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="396dp"></View>

    <View
        android:id="@+id/viewBackground_bottom_log_in"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </View>


    <TextView
        android:id="@+id/tv_new_sb_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Subtask: "
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintVertical_bias="0.026" />

    <View
        android:id="@+id/viewBackground_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"></View>

    <View
        android:id="@+id/viewProgressBarWhite"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_space_white"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_bottom"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_bottom"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_bottom">
    </View>

    <View
        android:id="@+id/viewProgressBarBlue"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_space_blue"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_bottom"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_bottom"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_bottom">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>
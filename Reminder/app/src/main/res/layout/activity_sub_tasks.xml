<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SubTasksActivity">

    <View
        android:id="@+id/task_father_list_subtask"
        android:layout_width="372dp"
        android:layout_height="25dp"
        android:background="@drawable/background_task_father1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203"></View>
    <View
        android:id="@+id/green_boton_task3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/background_task_father3"

        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintEnd_toStartOf="@+id/name_task_father_list_subtask"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"></View>

    <TextView
        android:id="@+id/name_task_father_list_subtask"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:layout_marginStart="32dp"
        android:text="Task father"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/edit_task_list_subtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintEnd_toStartOf="@+id/delete_task_list_subtask"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_edit" />

    <ImageView
        android:id="@+id/delete_task_list_subtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintEnd_toEndOf="@+id/task_father_list_subtask"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_delete" />

    <View
        android:id="@+id/viewBackground_top"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:background="@drawable/background_banner"
        app:layout_constraintTop_toBottomOf="@+id/imageReminder"
        tools:layout_editor_absoluteX="2dp">
    </View>

    <View
        android:id="@+id/viewBackground_bottom_log_in"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </View>

    <ImageView
        android:id="@+id/imageReminder"
        android:layout_width="164dp"
        android:layout_height="103dp"
        android:layout_marginBottom="524dp"
        android:src="@drawable/logo_reminder"
        app:layout_constraintBottom_toTopOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    </ImageView>
    <Button
        android:id="@+id/id_button_pending"
        style="@android:style/Widget.Button"
        android:layout_width="137dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="274dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_banner_actual"
        android:text="PENDING"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_top"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <Button
        android:id="@+id/id_button_completed"
        style="@android:style/Widget.Button"
        android:layout_width="137dp"
        android:layout_height="25dp"
        android:background="@drawable/background_banner_no_actual"
        android:text="COMPLETED"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toStartOf="@+id/viewBackground_top"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/id_button_pending"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <Button
        android:id="@+id/id_button_overdue"
        style="@android:style/Widget.Button"
        android:layout_width="136dp"
        android:layout_height="25dp"
        android:layout_marginStart="137dp"
        android:background="@drawable/background_banner_no_actual"
        android:text="OVERDUE"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_button_pending"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <ListView
        android:id="@+id/sub_task_list_view"
        android:layout_width="359dp"
        android:layout_height="429dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom_log_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageReminder"
        app:layout_constraintVertical_bias="0.888" />

    <View
        android:id="@+id/viewBackground_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </View>

    <View
        android:id="@+id/viewProgressBarWhite"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_space_white"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_bottom"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_bottom"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_bottom">
    </View>

    <View
        android:id="@+id/viewProgressBarBlue"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_space_blue"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_bottom"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_bottom"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_bottom">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>
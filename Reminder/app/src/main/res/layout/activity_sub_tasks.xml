<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SubTasksActivity">

    <ImageView
        android:id="@+id/imageReminder"
        android:layout_width="164dp"
        android:layout_height="103dp"
        android:src="@drawable/logo_reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>


    <View
        android:id="@+id/viewBackground_top"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:background="@drawable/background_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageReminder">
    </View>

    <Button
        android:id="@+id/id_button_pending"
        style="@android:style/Widget.Button"
        android:layout_width="137dp"
        android:layout_height="28dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_banner_actual"
        android:text="PENDING"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_top"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_top"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <Button
        android:id="@+id/id_button_completed"
        style="@android:style/Widget.Button"
        android:layout_width="137dp"
        android:layout_height="28dp"
        android:background="@drawable/background_banner_no_actual"
        android:text="COMPLETED"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_top"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_top"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <Button
        android:id="@+id/id_button_overdue"
        style="@android:style/Widget.Button"
        android:layout_width="136dp"
        android:layout_height="28dp"
        android:background="@drawable/background_banner_no_actual"
        android:text="OVERDUE"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_top"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_top"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <TextView
        android:id="@+id/tv_subtask"
        android:layout_width="77dp"
        android:layout_height="26dp"
        android:text="Subtask: "
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.028" />

    <Button
        android:id="@+id/id_button_add_sub_task"
        style="@android:style/Widget.Button"
        android:layout_width="131dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:alpha="0.9"
        android:background="@drawable/background_button_signin"
        android:drawableLeft="@drawable/icon_add"
        android:drawableTint="#EC2129"
        android:text="Add subtask"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toEndOf="@+id/tv_subtask"
        app:layout_constraintTop_toBottomOf="@+id/task_father_list_subtask"></Button>

    <View
        android:id="@+id/task_father_list_subtask"
        android:layout_width="375dp"
        android:layout_height="99dp"
        android:background="@drawable/background_space_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintVertical_bias="0.022"></View>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="52dp"
        android:layout_height="19dp"
        android:text="Label:"
        android:textColor="#555050"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"

        app:layout_constraintEnd_toEndOf="@+id/task_father_list_subtask"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.875" />

    <TextView
        android:id="@+id/date_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="313dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="29dp"
        android:text="16-01-2023"
        android:textColor="#555050"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintEnd_toEndOf="@+id/task_father_list_subtask"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/description_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="38dp"
        android:text="Description:"
        android:textColor="#555050"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/priority_boton_task_subtasks"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/background_task_priority1"

        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintEnd_toStartOf="@+id/name_task_father_list_subtask"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"></View>

    <TextView
        android:id="@+id/name_task_father_list_subtask"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:layout_marginStart="32dp"
        android:text="Task father"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.157" />

    <ImageButton
        android:id="@+id/edit_task_list_subtask"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#D9D9D9"
        android:src="@drawable/icon_edit"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintEnd_toStartOf="@+id/delete_task_list_subtask"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.156" />

    <ImageButton
        android:id="@+id/delete_task_list_subtask"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:backgroundTint="#D9D9D9"
        android:src="@drawable/icon_delete"
        app:layout_constraintBottom_toBottomOf="@+id/task_father_list_subtask"
        app:layout_constraintEnd_toEndOf="@+id/task_father_list_subtask"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="@+id/task_father_list_subtask"
        app:layout_constraintTop_toTopOf="@+id/task_father_list_subtask"
        app:layout_constraintVertical_bias="0.166"
         />

    <View
        android:id="@+id/viewBackground_bottom_log_in"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </View>

    <ListView
        android:id="@+id/sub_task_list_view"
        android:layout_width="368dp"
        android:layout_height="303dp"
        android:layout_marginTop="16dp"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtask" />

    <View
        android:id="@+id/viewBackground_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </View>

    <View
        android:id="@+id/viewProgressBarWhite"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_space_white"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_bottom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_bottom"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_bottom"
        app:layout_constraintVertical_bias="0.648"></View>

    <View
        android:id="@+id/viewProgressBarBlue"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_space_blue"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_bottom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_bottom"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_bottom"
        app:layout_constraintVertical_bias="0.648"></View>

</androidx.constraintlayout.widget.ConstraintLayout>
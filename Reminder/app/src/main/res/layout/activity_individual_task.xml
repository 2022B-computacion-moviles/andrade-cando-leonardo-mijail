<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.IndividualTaskActivity">

    <View
        android:id="@+id/viewBackground_top"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:background="@drawable/background_banner"
        app:layout_constraintTop_toBottomOf="@+id/imageReminder"
        tools:layout_editor_absoluteX="2dp">
    </View>

    <View
        android:id="@+id/viewBackground_bottom_log_in"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </View>

    <ImageView
        android:id="@+id/imageReminder"
        android:layout_width="164dp"
        android:layout_height="103dp"
        android:layout_marginBottom="524dp"
        android:src="@drawable/logo_reminder"
        app:layout_constraintBottom_toTopOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    </ImageView>
    <Button
        android:id="@+id/id_button_pending"
        style="@android:style/Widget.Button"
        android:layout_width="137dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="274dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_banner_actual"
        android:text="PENDING"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_top"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <Button
        android:id="@+id/id_button_completed"
        style="@android:style/Widget.Button"
        android:layout_width="137dp"
        android:layout_height="25dp"
        android:background="@drawable/background_banner_no_actual"
        android:text="COMPLETED"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toStartOf="@+id/viewBackground_top"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/id_button_pending"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <Button
        android:id="@+id/id_button_overdue"
        style="@android:style/Widget.Button"
        android:layout_width="136dp"
        android:layout_height="25dp"
        android:layout_marginStart="137dp"
        android:background="@drawable/background_banner_no_actual"
        android:text="OVERDUE"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_button_pending"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_top">
    </Button>

    <TextView
        android:id="@+id/date_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Task: "
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <View
        android:id="@+id/view"
        android:layout_width="380dp"
        android:layout_height="428dp"
        android:background="@drawable/background_space_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399" />

    <View
        android:id="@+id/backgroundButton_add_task"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="311dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/background_button_login"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="1.0"></View>

    <TextView
        android:id="@+id/p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="P3"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-2dp"
        android:text="P2"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.336"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <RadioGroup
        android:id="@+id/radioGroup_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="-10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom_log_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageReminder"
        app:layout_constraintVertical_bias="0.437">

        <RadioButton
            android:id="@+id/radioButton_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setPriority"
            android:buttonTint="#EC2129" />

        <RadioButton
            android:id="@+id/radioButton_p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setPriority"
            android:buttonTint="#0CA678" />

        <RadioButton
            android:id="@+id/radioButton_p3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setPriority"
            android:buttonTint="#2410DD" />

        <RadioButton
            android:id="@+id/radioButton_p4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setPriority"
            android:buttonTint="#FFD43B" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_label_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505" />

    <EditText
        android:id="@+id/description_task"
        android:layout_width="257dp"
        android:layout_height="25dp"
        android:background="@drawable/background_space_white"
        android:hint="Add a description of the taks."
        android:textColor="#555050"
        android:textColorHint="#555050"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

    <EditText
        android:id="@+id/date_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_space_white"
        android:hint="dd-mm-yyyy"
        android:textColor="#555050"
        android:textColorHint="#555050"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <TextView
        android:id="@+id/l4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/tv_date_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <RadioGroup
        android:id="@+id/radioGroup_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="-200dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom_log_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageReminder"
        app:layout_constraintVertical_bias="0.441">

        <RadioButton
            android:id="@+id/radioButton_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#EC2129" />

        <RadioButton
            android:id="@+id/radioButton_l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#0CA678" />

        <RadioButton
            android:id="@+id/radioButton_l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#2410DD" />

        <RadioButton
            android:id="@+id/radioButton_l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFD43B" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_priority_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <TextView
        android:id="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/id_button_save_task"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:alpha="0.9"
        android:background="@drawable/background_button_login"
        android:drawableLeft="@drawable/icon_add"
        android:text="Save task"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundButton_add_task"
        app:layout_constraintEnd_toEndOf="@+id/backgroundButton_add_task"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/backgroundButton_add_task"
        app:layout_constraintTop_toTopOf="@+id/backgroundButton_add_task"
        app:layout_constraintVertical_bias="1.0">
    </Button>

    <TextView
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="P4"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P1"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <TextView
        android:id="@+id/tv_description_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <CheckBox
        android:id="@+id/checkBox_task"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:buttonTint="@color/black"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School"
        android:textColor="#555050"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <EditText
        android:id="@+id/name_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_space_white"
        android:hint="Task 1"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />


    <View
        android:id="@+id/viewBackground_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </View>

    <View
        android:id="@+id/viewProgressBarWhite"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_space_white"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_bottom"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_bottom"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_bottom">
    </View>

    <View
        android:id="@+id/viewProgressBarBlue"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_space_blue"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground_bottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground_bottom"
        app:layout_constraintStart_toStartOf="@+id/viewBackground_bottom"
        app:layout_constraintTop_toTopOf="@+id/viewBackground_bottom">
    </View>

</androidx.constraintlayout.widget.ConstraintLayout>